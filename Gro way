  <script>
    // small interactions
    function scrollToSection(id){
      document.getElementById(id).scrollIntoView({behavior:'smooth',block:'center'});
    }
    function downloadDemo(){
      const blob = new Blob([document.documentElement.outerHTML],{type:'text/html'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'demo-website.html'; a.click();
      URL.revokeObjectURL(url);
    }

    // theme toggle ‚Äî simple inversion
    document.getElementById('themeToggle').addEventListener('click',()=>{
      const body = document.body;
      if(body.style.filter){ body.style.filter=''; document.getElementById('themeToggle').innerText='‡¶•‡¶ø‡¶Æ' }
      else{ body.style.filter='invert(1) hue-rotate(180deg)'; document.getElementById('themeToggle').innerText='‡¶∞‡¶ø‡¶∏‡ßç‡¶ü‡ßã‡¶∞' }
    });
  </script>
